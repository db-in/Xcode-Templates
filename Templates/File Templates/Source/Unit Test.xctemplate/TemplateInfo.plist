<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Kind</key>
	<string>Xcode.IDEKit.TextSubstitutionFileTemplateKind</string>

	<key>Description</key>
	<string>A Code file with a starting point to Unit Tests, organized with Xcode Macros and comments. Includes Swift and Objective-C versions.</string>

	<key>Summary</key>
	<string>A Cocoa Touch class</string>

  <key>SortOrder</key>
  <string>0</string>

	<key>DefaultCompletionName</key>
	<string>MyClass</string>

	<key>MainTemplateFiles</key>
	<string>___FILEBASENAME___.swift</string>

	<key>AllowedTypes</key>
	<array>
		<string>public.swift-source</string>
	</array>

	<key>Options</key>
	<array>
		<dict>
			<key>Identifier</key>
			<string>productName</string>
			<key>Required</key>
			<true/>
			<key>Name</key>
			<string>File:</string>
			<key>Description</key>
			<string>The name of the class to create</string>
			<key>Type</key>
			<string>text</string>
			<key>NotPersisted</key>
			<true/>
		</dict>

		<dict>
			<key>Identifier</key>
			<string>authors</string>
			<key>Name</key>
			<string>Authors:</string>
			<key>Description</key>
			<string>The author's name or the pair's name</string>
			<key>Default</key>
			<string>___FULLUSERNAME___</string>
			<key>Type</key>
			<string>text</string>
		</dict>

		<dict>
			<key>Identifier</key>
			<string>BDD</string>
			<key>Name</key>
			<string>Uses BDD syntax?</string>
			<key>Description</key>
			<string>Using BDD syntax also imports Quick and Nimble</string>
			<key>Type</key>
			<string>checkbox</string>
			<key>Default</key>
			<string>true</string>
		</dict>

		<dict>
			<key>Identifier</key>
			<string>testSubclass</string>
			<key>Description</key>
			<string>Unit test class that the new class will be a subclass of</string>
			<key>Name</key>
			<string>Subclass of:</string>
			<key>Default</key>
			<string>XCTestCase</string>
			<key>Required</key>
			<string>Yes</string>
			<key>Type</key>
			<string>class</string>
			<key>Values</key>
			<array>
				<string>XCTestCase</string>
			</array>
			<key>RequiredOptions</key>
			<dict>
				<key>BDD</key>
				<array>
					<string>false</string>
				</array>
			</dict>
		</dict>

	</array>
</dict>
</plist>
